<div class="hamburger">
  <span class="line"></span>
  <span class="line"></span>
  <span class="line"></span>
</div>

<style>
  .hamburger {
    cursor: pointer;
    display: none;
  }

  .hamburger .line {
    display: block;
    width: 45px;
    height: 4px;
    border-radius: 15px;
    margin-bottom: 10px;
    background-color: var(--black);
  }

  @media screen and (max-width: 1140px) {
    .hamburger {
      display: block;
    }
  }

  @media screen and (max-width: 480px) {
    .hamburger {
      visibility: block;
    }
    .hamburger .line {
      width: 40px;
      height: 3.5px;
    }
  }
</style>
