---
import shoppingCart from "../images/shopping-cart.svg";
---

<ul class="secondary-menu">
  <li class="secondary-link"><a href="">Help</a></li>
  <li class="secondary-link"><a href="">Sign In</a></li>
  <a href=""><img src={shoppingCart} alt="Shopping Cart Icon" /></a>
</ul>

<style>
  .secondary-menu {
    display: flex;
    flex: 1;
    align-items: center;
    justify-content: flex-end;
    gap: 1.5rem;
  }

  .secondary-link > a {
    color: var(--black);
    font-size: 1rem;
  }

  .secondary-link > a:hover {
    color: var(--forest_green);
    border-color: var(--forest_green);
    border-bottom: solid 0.1rem;
  }

  @media screen and (max-width: 1140px) {
    .secondary-menu {
      visibility: hidden;
    }
  }

  @media screen and (max-width: 480px) {
    .secondary-menu {
      visibility: hidden;
    }
  }
</style>
