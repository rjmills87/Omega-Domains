---
import heroImage from "../images/domain-names.svg";
---

<section class="hero">
  <div class="hero-text-container">
    <h2 class="hero-heading-1">Domain Names</h2>
    <h3 class="hero-heading-2">
      Get your very own .co.uk domain name for £0.01 for the 1st year.
    </h3>
    <button class="hero-btn">Find Your Domain</button>
    <p class="hero-para-1">
      3-year purchase required. Additional year(s) £11.99
    </p>
    <p class="hero-para-2">Domains include free privacy protection forever *</p>
  </div>
  <div class="img-container">
    <img
      class="hero-img"
      src={heroImage}
      alt="Illustration of a person looking at domain names."
    />
  </div>
</section>

<style>
  .hero {
    margin: 2.25rem;
    background-color: var(--platinum);
    border-radius: 15px;
    display: flex;
    align-items: center;
    justify-content: space-evenly;
  }

  .hero-text-container {
    margin-left: 1.5rem;
  }

  .hero-heading-1 {
    font-size: 1rem;
    margin-bottom: 16px;
  }

  .hero-heading-2 {
    font-size: 2.5rem;
    width: 75%;
    margin-bottom: 16px;
    line-height: 1.25em;
  }

  .hero-btn {
    background-color: var(--forest_green);
    color: var(--platinum);
    font-size: 1rem;
    padding: 15px 40px;
    cursor: pointer;
  }

  .hero-para-1 {
    font-size: 1rem;
    margin-top: 24px;
  }

  .hero-para-2 {
    font-size: 0.75rem;
    margin-top: 24px;
  }

  .img-container {
    margin-right: 1.5rem;
  }

  .hero-img {
    width: 550px;
    height: 450px;
  }
</style>
