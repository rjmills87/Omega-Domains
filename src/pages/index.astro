---
import PageLayout from "../layouts/PageLayout.astro";
import SearchBar from "../components/SearchBar.astro";
import Hero from "../components/Hero.astro";
import ProductGrid from "../components/ProductGrid.astro";
import ContentBlockImageRight from "../components/ContentBlockImageRight.astro";
import ContentBlockImageLeft from "../components/ContentBlockImageLeft.astro";
import onboardingImage from "../images/onboarding.svg";
import emailsImage from "../images/emails.svg";
const pageName = " Omega Domains Home Page";
---

<PageLayout pageName={pageName}>
  <SearchBar />
  <Hero />
  <ProductGrid />
  <div class="content-block-1">
    <ContentBlockImageRight
      titleHeading="Domain + Professional Email"
      textHeading="Build your brand online."
      textContent="Get a memorable online address — .com or .co.uk, it’s your choice — and back it up with a matching email address your customers can trust. Get both, plus expert 24x7 support, with this bundle for just £1.50/mo."
      btnText="Get Started"
      image={onboardingImage}
      imageAltText="Person looking at various website pages"
    />
  </div>
  <div class="content-block-2">
    <ContentBlockImageLeft
      titleHeading="Professional Email"
      textHeading="Build on your success."
      textContent="Everyone has email, but that doesn’t mean all email is the same. Customers are nine times more likely to choose a business with a professional address like you@YourBusiness.com."
      btnText="See Email Plans"
      image={emailsImage}
      imageAltText="Person looking emails on a smartphone"
    />
  </div>
</PageLayout>
